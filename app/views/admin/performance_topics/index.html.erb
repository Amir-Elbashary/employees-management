<% content_for :bc_title do %>
  Performance Topics
<% end %>

<% content_for :bc_current do %>
  All Topics
<% end %>

<% content_for :bc_buttons do %>
  <a href="<%= new_admin_performance_topic_path %>"><button type="button" class="btn btn-info"><i class="fa fa-plus-circle"></i> Add Topic</button></a>
<% end %>

<%= render 'shared/dashboard/breadcrumb' %>

<div class="card">
	<div class="card-body">
    <h4 class="card-title">Performance Topics</h4>
    <div class="table-responsive m-t-40">
      <table id="myTable" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Leaderboard</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @performance_topics.each do |topic| %>
            <tr>
              <td><%= topic.title %></td>
              <td><%= link_to 'Leaderboard', leaderboard_admin_performance_topic_path(topic), class: 'btn btn-sm btn-info leaderboard-link' %></td>
              <td>
                <a href="<%= edit_admin_performance_topic_path(topic) %>" data-toggle="tooltip" data-original-title="Edit"> <i class="fa fa-pencil text-inverse m-r-10"></i> </a>
                <a href="<%= admin_performance_topic_path(topic) %>" data-method="delete" data-toggle="tooltip" data-original-title="Delete" data-confirm="Are you sure?" class="delete-link"> <i class="fa fa-close text-danger"></i> </a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
