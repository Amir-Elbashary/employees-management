<div class="modal fade" id="escalationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel1">Escalate request #<%= @vacation_request.id %> to H.R</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <%= form_for @vacation_request, url: escalate_admin_vacation_request_path(@vacation_request), method: :patch do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <label for="recipient-name" class="control-label"><b>Why would you like to escalate your request ?</b></label>
          </div>
          <div class="form-group">
            <%= f.label :escalation_reason, 'Escalation Reason' %>:
            <%= f.text_area :escalation_reason, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit 'Escalate!', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
