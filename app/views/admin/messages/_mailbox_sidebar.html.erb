<div class="col-xlg-2 col-lg-3 col-md-4">
  <div class="card-body inbox-panel"><a href="<%= new_admin_message_path %>" class="btn btn-danger m-b-20 p-10 btn-block waves-effect waves-light">Compose</a>
    <ul class="list-group list-group-full">
      <li class="list-group-item <%= 'active' if !params[:t] && action_name == 'index' %>">
        <a href="<%= admin_messages_path %>" class="inbox-link"><i class="mdi mdi-gmail"></i> Inbox </a><span class="badge badge-success ml-auto <%= 'd-none' unless @messages.unread.any? %>"><%= @messages.unread.count %></span>
      </li>
      <li class="list-group-item">
        <a href="javascript:void(0)"> <i class="mdi mdi-star"></i> Starred </a><span class="badge badge-success ml-auto">Soon</span>
      </li>
      <li class="list-group-item <%= 'active' if params[:t] %>">
        <a href="<%= admin_messages_path(t: 'sent') %>" class="sent-link"> <i class="mdi mdi-file-document-box"></i> Sent Mail </a>
      </li>
      <li class="list-group-item">
        <a href="javascript:void(0)"> <i class="mdi mdi-delete"></i> Trash </a><span class="badge badge-success ml-auto">Soon</span>
      </li>
    </ul>
    <h3 class="card-title m-t-40">Labels (Soon)</h3>
    <div class="list-group b-0 mail-list">
      <a href="#" class="list-group-item"><span class="fa fa-circle text-warning m-r-10"></span>Work</a>
      <a href="#" class="list-group-item"><span class="fa fa-circle text-info m-r-10"></span>Unread</a>
      <a href="#" class="list-group-item"><span class="fa fa-circle text-success m-r-10"></span>Read</a>
    </div>
  </div>
</div>
