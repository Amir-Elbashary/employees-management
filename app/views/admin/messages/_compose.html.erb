<div class="card-body">
  <h3 class="card-title">Compose New Message</h3>
  <%= form_for [:admin, @message] do |f| %>
    <div class="form-group">
      <%= f.text_field :recipient, placeholder: 'Type "all" or one or multiple emails eg: mail@example.com, new@example.com', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :subject, placeholder: 'Subject:', required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_area :content, rows: 15, required: false, class: 'html-editor form-control' %>
    </div>

    <h4><i class="ti-link"></i> Attachment</h4>

    <div class="form-group">
      <%= f.file_field :files, multiple: true, class: 'form-control' %>
    </div>

    <button type="submit" class="btn btn-success m-t-20 mail-submit-link"><i class="fa fa-envelope-o"></i> Send</button>
    <a href="<%= admin_messages_path(user: "#{current_active_user.class.name.downcase}-#{current_active_user.id}") %>" class="btn btn-inverse m-t-20"><i class="fa fa-times"></i> Discard</a>
  <% end %>
</div>
